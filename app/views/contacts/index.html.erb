<div class="container">
      <div class="col-sm-3">
      	<h2>Riku Kiranatama</h2>
      	<%= image_tag("profile.jpg", class: "img-circle") %>
      </div>
      <div class="col-sm-8">
      	<%= form_tag('', class: "form-horizontal") do -%>
      	  <div class="form-group">
      	  	<%= label_tag('inputEmail', 'Email', class: "col-sm-4 control-label") -%>
            <div class="col-sm-8">
              <%= email_field_tag('inputEmail', nil, class: "form-control", placeholder: "Email Anda") -%>
            </div>
          </div>
          <div class="form-group">
          	<%= label_tag('inputMessages', 'Messages', class: "col-sm-4 control-label") -%>
            <div class="col-sm-8">
              <%= text_area_tag('inputMessages', nil, class: "form-control", placeholder: "Messages Anda", rows: "8") -%>
            </div>
          </div>
		  <div class="form-group">
            <div class="col-sm-8">
            	<%= button_tag('Submit', name:"submit", class:"btn btn-default") -%>
            </div>
          </div>
		<% end -%>
      </div>
    </div>